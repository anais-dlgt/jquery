<h1 class="text-center text-info"> Boîte de réception </h1>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="row">Emails reçus</th>
          </tr>
        </thead>
        <% @email.each do |mail| %>
        <% if mail.read == false %>
        <tr>
          <td class="object<%=mail.id%>"><%= link_to mail.object, mail, :class => 'unread', :remote => true %></td>
          <td>le <%=mail.created_at.strftime("%d/%m/%Y")%></td>
        </tr>
        <% else %>
        <tr>
          <td class="object<%=mail.id%>"><%= link_to mail.object, mail, :class => 'read', :remote => true %></td>
          <td>le <%=mail.created_at.strftime("%d/%m/%Y")%></td>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>
    <div class="col">
        <div id="body_email"></div>
      </div>
    </div>
  </div>
</div>
